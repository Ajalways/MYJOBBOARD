{
  "name": "proofjobs",
  "version": "1.0.0",
  "description": "A modern job platform connecting forensic accounting professionals with specialized opportunities.",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server/index.js",
    "dev:client": "vite",
    "build": "vite build",
    "start": "npm run db:generate && node server/index.js",
    "start:deploy": "npx prisma migrate deploy && npm run db:generate && node index.js",
    "start:prod": "NODE_ENV=production npm run db:generate && node server/index.js",
    "preview": "vite preview",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "node server/seed.js",
    "git:push": "git add . && git commit -m \"Auto-commit: $(date)\" && git push",
    "git:push-msg": "git add . && git commit && git push",
    "deploy": "npm run build && npm run git:push"
  },
  "keywords": [
    "forensic",
    "accounting",
    "jobs",
    "hiring",
    "skills"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  },
